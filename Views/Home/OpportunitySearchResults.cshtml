@model IEnumerable<PreSemester_Project.Models.Opportunity>

@{
    ViewData["Title"] = "OpportunitySearchResults";
}

<h1>Search Results</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.center)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
         </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.center)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="ManageOpportunities">Back to List</a>
</div>