@model IEnumerable<PreSemester_Project.Models.Opportunity>

@{
    ViewData["Title"] = "ManageOpportunities";
}

<h1>Manage Opportunities</h1>
<p class="text-warning">@TempData["MethodResult"]</p>
<p class="text-warning">@TempData["filteredBy"]</p>
<p>
    <a asp-action="CreateOpportunities">Create New Opportunity</a>
</p>
<p>
    <a asp-action="FilterPosted">Posted within the last 60 days</a>
</p>
<form method="get" asp-action="FilterCenter" style="float:right">
    <table>
        <tr>
            <td>
                <select name="center" id="center" class="form-control">
                    <option value="All">All</option>
                    <option value="Jacksonville Location">Jacksonville Location</option>
                    <option value="Miami Location">Miami Location</option>
                    <option value="St. Petersburg Location">St. Petersburg Location</option>
                 </select>
            </td>
            <td>
                <input type="submit" value="Filter" class="btn btn-primary" />
            </td>
        </tr>
    </table>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.center)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datePosted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfEvent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.center)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datePosted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfEvent)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOpportunity", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "DeleteOpportunity", new { id = item.id }) |
                @Html.ActionLink("Volunteer Matches", "VolunteerMatches", new { id = item.id })
            </td>
        </tr>
}
    </tbody>
</table>
