@model PreSemester_Project.Models.Opportunity

@{
    ViewData["Title"] = "CreateOpportunities";
}

<h1>CreateOpportunities</h1>

<h4>Opportunity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateOpportunities">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="TimeOfEvent" class="control-label"></label>
                <input asp-for="TimeOfEvent" class="form-control" />
                <span asp-validation-for="TimeOfEvent" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageOpportunities">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
