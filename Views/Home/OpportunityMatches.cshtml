@model PreSemester_Project.Models.OpportunityMatchesView

@{
    ViewData["Title"] = "OpportunityMatches";
}

<h1>Opportunity Matches</h1>

@foreach (var vol in Model._volunteerList)
{
    <p>These are the opportunity matches for @Html.DisplayFor(modelItem => vol.FirstName) @Html.DisplayFor(modelItem => vol.LastName)</p>
    <p>Center Preferences: @Html.DisplayFor(modelItem => vol.CenterPreferences)</p>
}
<br />
<br />


<table class="table">
    <thead>
        <tr>
            <th>
                Center Name
            </th>
            <th>
                Title
            </th>
            <th>
                Date and Time of the Event
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model._opportunityList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.center)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
            </tr>
        }
    </tbody>
</table>
