@model PreSemester_Project.Models.Opportunity

@{
    ViewData["Title"] = "CreateOpportunities";
}

<h1>Create Opportunities</h1>

<h4>Opportunity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateOpportunities">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datePosted" class="control-label"></label>
                <input asp-for="datePosted" class="form-control" type="date" />
                <span asp-validation-for="datePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="center" class="control-label"></label>
                <select asp-for="center" class="form-control"/>
                    <option value="Jacksonville Location">Jacksonville Location</option>
                    <option value="Miami Location">Miami Location</option>
                    <option value="St. Petersburg Location">St. Petersburg Location</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfEvent" class="control-label"></label>
                <input asp-for="TimeOfEvent" class="form-control" />
                <span asp-validation-for="TimeOfEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="submit" value="Cancel" class="btn btn-primary" formnovalidate="formnovalidate" formaction="CancelOpportunity" style="float:right" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageOpportunities">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
